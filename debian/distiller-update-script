#!/bin/bash
# Console script wrapper for distiller-update

set -e

VENV_PYTHON="/usr/lib/distiller-update/.venv/bin/python"

if [ ! -f "$VENV_PYTHON" ]; then
    echo "ERROR: Virtual environment not found" >&2
    echo "Please reinstall distiller-update package" >&2
    exit 1
fi

export PYTHONPATH="/opt/distiller-sdk/src:$PYTHONPATH"

exec "$VENV_PYTHON" -m distiller_update "$@"
