#!/bin/sh
set -e

case "$1" in
purge | remove)
	# Remove old /opt installation (migration from 2.1.x)
	[ -d /opt/distiller-update ] && rm -rf /opt/distiller-update
	[ -f usr/bin/distiller-update ] && rm -f usr/bin/distiller-update

	# Uninstall tool
	uv tool uninstall distiller-update 2>/dev/null || true

	if [ "$1" = "purge" ]; then
		[ -d /var/cache/distiller-update ] && rm -rf /var/cache/distiller-update
		[ -d /etc/distiller-update ] && rm -rf /etc/distiller-update
	fi
	;;

upgrade | failed-upgrade | abort-install | abort-upgrade | disappear) ;;

*)
	echo "postrm called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

#DEBHELPER#

exit 0
