#!/bin/sh
set -e

case "$1" in
purge)
	# Remove the virtual environment
	[ -d /opt/distiller-update/.venv ] && rm -rf /opt/distiller-update/.venv

	# Remove cache directory
	[ -d /var/cache/distiller-update ] && rm -rf /var/cache/distiller-update

	# Remove configuration directory if empty
	[ -d /etc/distiller-update ] && \
		rmdir --ignore-fail-on-non-empty /etc/distiller-update || true
	;;

remove | upgrade | failed-upgrade | abort-install | abort-upgrade | disappear) ;;

*)
	echo "postrm called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

#DEBHELPER#

exit 0
