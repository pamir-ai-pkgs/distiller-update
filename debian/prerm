#!/bin/sh
set -e

case "$1" in
remove | deconfigure)
	# Remove MOTD file before package removal
	[ -f /etc/update-motd.d/99-distiller-updates ] && rm -f /etc/update-motd.d/99-distiller-updates
	;;

upgrade) ;;

failed-upgrade) ;;

*)
	echo "ERROR: prerm called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

#DEBHELPER#

exit 0
